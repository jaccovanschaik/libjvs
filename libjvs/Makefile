.PHONY: tags test

CC = gcc

LIBJVS = vector.o buffer.o hash.o list.o net.o sdr.o ts.o debug.o cx.o \
         nx.o utils.o tgen.o bitmask.o

CFLAGS = -g -fPIC -O -Wall

all: libjvs.a libjvs.so

libjvs.a: $(LIBJVS)
	$(MAKE_ALIB) libjvs.a $(LIBJVS)

libjvs.so: $(LIBJVS)
	$(MAKE_SLIB) libjvs.so $(LIBJVS)

clean:
	rm -f *.o libjvs.a libjvs.so core libjvs.tgz a.out tgen.[ch]

libjvs.tgz: clean
	tar cvf - `ls | grep -v libjvs.tgz` | gzip > libjvs.tgz

install: libjvs.a libjvs.so
	if [ ! -d $(INSTALL_LIB) ]; then mkdir -p $(INSTALL_LIB); fi
	cp libjvs.a libjvs.so $(INSTALL_LIB)
	if [ ! -d $(INSTALL_INC)/libjvs ]; then mkdir -p $(INSTALL_INC)/libjvs; fi
	cp *.h $(INSTALL_INC)/libjvs

tags:
	ctags -R . /usr/include

tgen.c: tgen.sh
	./tgen.sh -c > $@

tgen.h: tgen.sh
	./tgen.sh -h > $@

test: libjvs.a
	for f in `grep -l TEST *.c`; do \
          echo "Testing $$f"; \
          $(CC) $(CFLAGS) -DTEST $$f libjvs.a -lm && ./a.out; \
        done

# Dependencies - generated by deps on Fri Apr 13 13:55:26 CEST 2012

bitmask.o: bitmask.c buffer.h bitmask.h tgen.h
buffer.o: buffer.c buffer.h
cx.o: cx.c buffer.h list.h net.h defs.h debug.h cx.h
debug.o: debug.c debug.h
hash.o: hash.c list.h hash.h
list.o: list.c list.h
net.o: net.c net.h debug.h
nx.o: nx.c debug.h buffer.h list.h defs.h net.h nx.h
sdr.o: sdr.c defs.h sdr.h
tgen.o: tgen.c buffer.h tgen.h
ts.o: ts.c buffer.h debug.h list.h ts.h
utils.o: utils.c utils.h
vector.o: vector.c defs.h vector.h
