.PHONY: tags test

CC = gcc

LIBJVS = vector.o buffer.o hash.o list.o sdr.o debug.o cx.o \
         utils.o tgen.o bitmask.o net.o tcp.o udp.o

CFLAGS = -g -fPIC -Wall

all: libjvs.a libjvs.so

libjvs.a: $(LIBJVS)
	$(MAKE_ALIB) libjvs.a $(LIBJVS)

libjvs.so: $(LIBJVS)
	$(MAKE_SLIB) libjvs.so $(LIBJVS)

clean:
	rm -f *.o libjvs.a libjvs.so core libjvs.tgz test-* tgen.[ch]

libjvs.tgz: clean
	tar cvf - `ls | grep -v libjvs.tgz` | gzip > libjvs.tgz

install: libjvs.a libjvs.so test
	if [ ! -d $(INSTALL_LIB) ]; then mkdir -p $(INSTALL_LIB); fi
	cp libjvs.a libjvs.so $(INSTALL_LIB)
	if [ ! -d $(INSTALL_INC)/libjvs ]; then mkdir -p $(INSTALL_INC)/libjvs; fi
	cp *.h $(INSTALL_INC)/libjvs

tags:
	ctags -R .

tgen.c: tgen.sh
	./tgen.sh -c > $@

tgen.h: tgen.sh
	./tgen.sh -h > $@

test: libjvs.a
	for f in `grep -l TEST *.c`; do \
          base=`basename $$f .c`; \
          echo "Testing $$f"; \
          $(CC) $(CFLAGS) -DTEST -o test-$$base $$f libjvs.a -lm && ./test-$$base; \
        done

# Dependencies - generated by deps on Wed Jun  5 20:29:45 CEST 2013

bitmask.o: bitmask.c buffer.h bitmask.h tgen.h defs.h 
buffer.o: buffer.c buffer.h utils.h defs.h 
cx.o: cx.c buffer.h list.h tcp.h defs.h debug.h cx.h 
debug.o: debug.c debug.h utils.h 
hash.o: hash.c list.h hash.h 
list.o: list.c list.h 
net.o: net.c net.h 
nx.o: nx.c debug.h buffer.h list.h defs.h net.h tcp.h nx.h 
sdr.o: sdr.c defs.h sdr.h 
tcp.o: tcp.c tcp.h debug.h 
tgen.o: tgen.c buffer.h tgen.h 
udp.o: udp.c tcp.h debug.h 
utils.o: utils.c defs.h utils.h 
vector.o: vector.c defs.h vector.h 
